.tab-box{
  width: 440rpx;
	border: solid 1rpx #ececec;
  font-size: 36rpx;
  text-align: center;
  margin: 20rpx auto;
  color: #999999;
}
.tab-box,.tab-nav{
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 37rpx;
}
.tab-nav{
  display: inline-block;
  width: 200rpx;
}
.tab-nav.on{
   width: 240rpx;
	background-color: #538afe;
  color: #fff;
}
.line{
	height: 1px;
	border-top: solid 1px #b1b8bf;
	opacity: 0.4;
}
.tab-content,.line{
  width: 750rpx;
}
.time-box{
  display: flex;
  margin: 20rpx 0 0 20rpx;
}
.icon{
  width:18rpx;
  height:18rpx;
  border-top:4rpx solid #aaa;
  border-right:4rpx solid #aaa;
  transform:rotate(135deg);
  margin: 10rpx 0 0 20rpx;
}
.input-view{
  color: #999;
}
.chart-container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  -webkit-text-size-adjust:none;
  font-size: 35rpx;
  color: #333;
  font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
  width: 100%;
  height: 600rpx;
}
.chart-line{
  margin: 60rpx auto 40rpx;
  width: 700rpx;
	height: 1px;
	background-color: #dcdcdc;
}
.chart-list{
  padding: 0 20rpx 60rpx 20rpx;
  color: #333333;
}
.chart-item-left,.chart-item{
  display: flex;
  align-items: center;
}
.chart-item{
	height: 106rpx;
	background-color: #ffffff;
	box-shadow: 0 1rpx 13rpx 0 rgba(185, 185, 185, 0.27);
	border-radius: 15rpx;
  padding: 0 20rpx;
  justify-content: space-between;
  margin: 0 0 20rpx 0;
}
.chart-item-img{
  width: 68rpx;
	height: 68rpx;
}
.chart-item-name{
  font-size: 32rpx;
  margin-left: 20rpx;
}
.price-text{
  font-size: 36rpx;
}