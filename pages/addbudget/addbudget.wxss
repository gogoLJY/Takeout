page{
  background-color: #f5f5f5;
}
.budget-main{
  width: 750rpx;
}
.budget-item{
	box-shadow: 0 0 27rpx 2rpx rgba(185, 185, 185, 0.36);
}
.budget-prompt,.settlement-item{
  margin-top: 20rpx;
}
.prompt-item,.budget-item{
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx;
  font-size: 36rpx;
  background-color: #ffffff;
}
.alert-item{
  padding: 0 10rpx 0 25rpx!important;
}
.item-input{
  color: #333;
}
input::placeholder,.settlement-text{
  color: #999;
}
.price-input{
  width: 210rpx;
  height: 100rpx;
  line-height: 110rpx;
  text-align: right;
}
.hidebudget{
  transition: all .3s;
}
.prompt-desc{
  display: flex; 
  flex-direction: column;
}
.desc-subdesc{
  font-size: 20rpx;
	color: #999999;
  margin-top: 10rpx;
}
.budget-save-btn-box{
  padding: 0 20rpx;
  margin-top: 40rpx;
}