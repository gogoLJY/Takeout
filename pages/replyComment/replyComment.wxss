}
.line{
  display: block;
  width: 700rpx;
  height: 1rpx;
  margin: 20rpx auto 10rpx;
  background-color: #dcdcdc;
  padding: .5rpx 0rpx 0 0;
  margin-left: -0;
  position: relative;
}
.line::before{
  content: '';
  position: absolute;
  top: -3rpx;
  left: 12rpx;
  width: 0;
  border-right: 19rpx solid transparent;
  border-left: 19rpx solid transparent;
  border-top: 19rpx solid #fff;
  z-index: 1;
}
.line:after {
  content: '';
  position: absolute;
  top: -4px;
  left: 20rpx;
  width: 20rpx;
  height: 20rpx;
  border-right: 1px solid #dcdcdc;
  border-top: 1px solid #dcdcdc;
  transform: rotate(135deg); 
 } 
